<Page
    x:Class="DP_Filmvolger.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DP_Filmvolger"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="Poster" HorizontalAlignment="Left" Margin="16,16,0,0" VerticalAlignment="Top" Width="400" Height="800"/>
        <TextBox x:Name="Search" HorizontalAlignment="Center" Margin="0,-200,0,0" Width="200" Text="" VerticalAlignment="Center" PlaceholderText="Movie Title"/>
        <Button Content="Shaw" HorizontalAlignment="Center" VerticalAlignment="Center" Height="128" Width="256" FontSize="72" Click="Button_Click"/>
        <Button Content="Search" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,300,0,0" Height="128" Width="256" FontSize="72" Click="Button_Click_1"/>
    </Grid>
</Page>
